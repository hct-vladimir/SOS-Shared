@model Cerberus.Sos.Accounting.BusinessLogic.Entities.Territorio

@{
    ViewBag.Title = "Editar Territorio";
}

<h2>Editar territorio</h2>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Modificar datos de Territorio
            </div>
            <div class="panel-body collapse in">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Codigo, "Codigo")
                        @Html.TextBoxFor(model => model.Codigo, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, "Nombre")
                        @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CiudadId,"Codigo Ciudad")
                        @Html.DropDownListFor(model => model.CiudadId, new SelectList(ViewBag.CiudadList, "Id", "Nombre"), "Seleccione", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Modificar" class="btn btn-default" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


