@model Cerberus.Sos.Accounting.BusinessLogic.Entities.AnexosTributario

@{
    ViewBag.Title = "Registrar Anexo Tributario";
}

<h2>Anexos Tributarios</h2>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ingresar datos del Anexo Tributario
                </div>
                <div class="panel-body collapse in">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Codigo, "Codigo")
                        @Html.TextBoxFor(model => model.Codigo, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Codigo)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descripcion, "Descripcion")
                        @Html.TextBoxFor(model => model.Descripcion, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Descripcion)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Grupo, "Grupo")
                        @Html.TextBoxFor(model => model.Grupo, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Grupo)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-default">Registrar</button>
    </div>

}

<div class="form-links">
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
