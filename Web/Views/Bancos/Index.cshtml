@model IEnumerable<Cerberus.Sos.Accounting.BusinessLogic.Entities.Banco>

@{
    ViewBag.Title = "Bancos";
}

<h1 class="page-header">Bancos</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="#panel-busqueda" role="button" data-toggle="collapse">Búsqueda de bancos <span class="fa fa-chevron" aria-hidden="true"></span></a>
    </div>
    <div id="panel-busqueda" class="panel-body collapse in">
        @using (Html.BeginForm("Index", "Bancos", FormMethod.Get))
        {
            @Html.ValidationSummary(true)
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Nombre">Nombre Banco</label>
                        @Html.TextBox("txtNombreBanco", null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
            @*@Html.TextBox("txtNombreBanco")
                <input type="submit" value="Busqueda">*@
        }
    </div>
</div>

<p>
    @Html.ActionLink("Nuevo Banco", "Create")
</p>
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>CodigoPais</th>
                    <th>Iban</th>
                    <th>Swift</th> 
                    <th>Telefono</th>
                    <th>Acciones</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoPais)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Iban)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Swift)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.ActionLink("Ver detalle", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Modificar", "Edit", new { id = item.Id })
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>

}


