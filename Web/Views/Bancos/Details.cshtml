@model Cerberus.Sos.Accounting.BusinessLogic.Entities.Banco

@{
    ViewBag.Title = "Ver banco";
}

<h2>Banco</h2>

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Datos del Banco
            </div>
            <div class="panel-body collapse in">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Nombre, "Nombre")
                        @Html.TextBoxFor(model => model.Nombre, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Nombre)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CodigoPais, "Codigo Pais")
                        @Html.TextBoxFor(model => model.CodigoPais, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.CodigoPais)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Iban, "Iban")
                        @Html.TextBoxFor(model => model.Iban, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Iban)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Swift, "Swift")
                        @Html.TextBoxFor(model => model.Swift, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Swift)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Telefono, "Telefono")
                        @Html.TextBoxFor(model => model.Telefono, null, new { @class = "form-control", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.Telefono)
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="form-links">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
