@model Cerberus.Sos.Accounting.BusinessLogic.Entities.Reportes.ReporteBalanceGeneral
@{
    ViewBag.Title = "BalanceGeneral";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Balance General</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Elegir Fechas
    </div>
    <div id="panel-busqueda" class="panel-body">
        @using (Html.BeginForm("BalanceGeneral", "Reportes", FormMethod.Get))
        {
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("FacilityId", "Facility")
                        @Html.DropDownList("FacilityId", null, "-- Todos --", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="FechaDesde">De:</label>
                        <div class='input-group date' id='datetimepicker-de'>
                            @Html.TextBox("FechaDesde", null, new {@class = "form-control"})
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="FechaHasta">A:</label>
                        <div class='input-group date' id='datetimepicker-a'>
                            @Html.TextBox("FechaHasta", null, new {@class = "form-control"})
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Balance General
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                        <tr>
                            <th>ACTIVOS</th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Activos No Corrientes</th>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Activos Intangibles</td>
                            <td>@Model.Intangibles</td>
                        </tr>
                        <tr>
                            <td>Bienes, Instalaciones y Equipamiento</td>
                            <td>@Model.BienesEquipamiento</td>
                        </tr>
                        <tr>
                            <td>Propiedad e Inversión</td>
                            <td>@Model.PropiedadInversion</td>
                        </tr>
                        <tr>
                            <td>Otros Activos Financieros de largo plazo</td>
                            <td>@Model.OtrosActivosLargoPlazo</td>
                        </tr>
                        <tr>
                            <td>Inversiones en empresas</td>
                            <td>@Model.InversionesEmpresas</td>
                        </tr>
                        <tr>
                            <td>Activos Biológicos</td>
                            <td>@Model.Biologicos</td>
                        </tr>
                        <tr>
                            <th>Total de activos no corrientes</th>
                            <th>@Model.TotalActivosNoCorrientes</th>
                        </tr>
                        <tr>
                            <th><strong>Activos Corrientes</strong></th>
                            <td></td>
                        </tr>
                        <tr>
                            <td>Inventarios, existencia</td>
                            <td>@Model.Inventarios</td>
                        </tr>
                        <tr>
                            <td>Cuentas por cobrar</td>
                            <td>@Model.CuentasPorCobrar</td>
                        </tr>
                        <tr>
                            <td>Efectivo y equivalentes de efectivo</td>
                            <td>@Model.Efectivo.ToString("N2")</td>
                        </tr>
                        <tr>
                            <td>Otros activos financieros e corto plazo</td>
                            <td>@Model.OtrosActivosCortoPlazo</td>
                        </tr>
                        <tr>
                            <th>Total de activos corrientes</th>
                            <th>@Model.TotalActivosCorrientes.ToString("N2")</th>
                        </tr>
                        <tr>
                            <th>Total Activos</th>
                            <th>@Model.TotalActivos.ToString("N2")</th>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th>FONDOS ACUMULADOS Y PASIVOS</th>
                                <th></th>
                            </tr>
                            <tr>
                                <th>Fondo acumulado</th>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Fondos no restringidos</td>
                                <td>@Model.FondosNoRestringidos</td>
                            </tr>
                            <tr>
                                <td>Fondos restringidos</td>
                                <td>@Model.FondosRestringidos</td>
                            </tr>
                            <tr>
                                <td>Resultado de la gestión anterior</td>
                                <td>@Model.ResultadoAnteriorGestion</td>
                            </tr>
                            <tr>
                                <td>Resultado de la gestión actual</td>
                                <td>@Model.ResultadoGestionActual</td>
                            </tr>
                            <tr>
                                <th>Total fondos acumulados</th>
                                <th>@Model.TotalFondosAcumulados</th>
                            </tr>
                            <tr>
                                <th>Pasivos no corrientes</th>
                                <th></th>
                            </tr>
                            <tr>
                                <td>Fondos mantenidos en administración fiduciaria</td>
                                <td>@Model.FondosAdministracionFiduciaria</td>
                            </tr>
                            <tr>
                                <th>Provisiones a largo plazo</th>
                                <td>@Model.ProvisionesLargoPlazo</td>
                            </tr>
                            <tr>
                                <th>Total pasivos no corrientes</th>
                                <th>@Model.TotalPasivosNoCorrientes</th>
                            </tr>
                            <tr>
                                <th>Pasivos corrientes</th>
                                <th></th>
                            </tr>
                            <tr>
                                <td>Otros pasivos de corto plazo</td>
                                <td>@Model.OtrosPasivosCortoPlazo</td>
                            </tr>
                            <tr>
                                <td>Ingreso diferido</td>
                                <td>@Model.IngresoDiferido</td>
                            </tr>
                            <tr>
                                <td>Fondos restringidos</td>
                                <td>@Model.PasivoFondosRestringidos</td>
                            </tr>
                           <tr>
                                <th>Total pasivos corrientes</th>
                                <th>@Model.TotalPasivosCorrientes.ToString("N2")</th>
                            </tr>
                            <tr>
                                <td>Transferencias Internas</td>
                                <td>@Model.TransferenciasInternas</td>
                            </tr>
                            <tr>
                                <th>Total acumulado de fondos y pasivo</th>
                                <th>@Model.TotalFondosYPasivos.ToString("N2")</th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
