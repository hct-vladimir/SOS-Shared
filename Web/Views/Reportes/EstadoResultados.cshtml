@model Cerberus.Sos.Accounting.BusinessLogic.Entities.Reportes.ReporteEstadoResultados
@{
    ViewBag.Title = "EstadoResultados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Estado de Resultados</h2>


<div class="panel panel-default">
    <div class="panel-heading">
        Elegir Fechas
    </div>
    <div id="panel-busqueda" class="panel-body">
        @using (Html.BeginForm("EstadoResultados", "Reportes", FormMethod.Get))
        {
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        @Html.Label("FacilityId", "Facility")
                        @Html.DropDownList("FacilityId", null, "-- Todos --", new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="FechaDesde">De:</label>
                        <div class='input-group date' id='datetimepicker-de'>
                            @Html.TextBox("FechaDesde", null, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="FechaHasta">A:</label>
                        <div class='input-group date' id='datetimepicker-a'>
                            @Html.TextBox("FechaHasta", null, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Balance General
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <tbody>
                            <tr>
                                <th>RECURSOS ENTRANTES</th>
                                <th>Total</th>
                            </tr>
                            <tr>
                                <th>Ingreso del Extranjero</th>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Ingreso de las APs para gastos de manutención</td>
                                <td>@Model.IngresoGastosManutencion </td>
                            </tr>
                            <tr>
                                <td>Ingreso de las APs para GC</td>
                                <td>@Model.IngresoGc</td>
                            </tr>
                            <tr>
                                <th>Ingreso local</th>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Ingreso local de Recaudación de Fondos</td>
                                <td>@Model.IngresoRecaudacionFondos</td>
                            </tr>
                            <tr>
                                <td>Ingreso local de subsidios gubernamentales y apoyo gubernamental</td>
                                <td>@Model.IngresoSubsidios</td>
                            </tr>
                            <tr>
                                <td>Ingreso local operativo</td>
                                <td>@Model.IngresoOperativo</td>
                            </tr>
                            <tr>
                                <td>Otro ingreso local</td>
                                <td>@Model.OtroIngreso</td>
                            </tr>
                            <tr>
                                <th>Total de recursos entrantes</th>
                                <th>@Model.TotalRecursosEntrantes</th>
                            </tr>
                            <tr>
                                <th>GASTOS</th>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Gastos programa/proyecto</td>
                                <td>@Model.GastosPrograma</td>
                            </tr>
                            <tr>
                                <td>Gastos administrativos ON</td>
                                <td>@Model.GastosAdministrativos</td>
                            </tr>
                            <tr>
                                <td>Gastos de Recaudación de Fondos</td>
                                <td>@Model.GastosRecaudacionFondos.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td>Otros gastos</td>
                                <td>@Model.OtrosGastos</td>
                            </tr>
                            <tr>
                                <th>Gastos totales</th>
                                <th>@Model.TotalGastos.ToString("N2")</th>
                            </tr>
                            <tr>
                                <th>Excedente/déficit neto en las actividades operativas</th>
                                <th></th>
                            </tr>
                            <tr>
                                <th>Ingreso/gasto de actividades financieras</th>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Ingreso por intereses</td>
                                <td>@Model.IngresoIntereses</td>
                            </tr>
                            <tr>
                                <td>Gasto por intereses</td>
                                <td>@Model.GastoIntereses</td>
                            </tr>
                            <tr>
                                <td>Otro ingreso financiero (Gastos)</td>
                                <td>@Model.OtroIngresoFinanciero</td>
                            </tr>
                            <tr>
                                <th>Ganancia o pérdida por el tipo de cambio</th>
                                <td>@Model.GananciaPerdidaTipoCambio</td>
                            </tr>
                            <tr>
                                <th>Excedente/déficit neto antes del impuesto</th>
                                <td>@Model.TotalNetoSinImpuesto</td>
                            </tr>
                            <tr>
                                <th>Gastos por impuesto</th>
                                <td>@Model.GastoPorImpuesto</td>
                            </tr>
                            <tr>
                                <th>Excedente/déficit neto después del impuesto</th>
                                <td>@Model.TotalNetoConImpuesto</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
