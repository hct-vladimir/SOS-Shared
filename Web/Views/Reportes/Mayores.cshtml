@model List<Cerberus.Sos.Accounting.BusinessLogic.Entities.Reportes.ReporteMayores>
@{
    ViewBag.Title = "Mayores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mayores</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        Elegir Cuenta
    </div>
    <div id="panel-busqueda" class="panel-body">
        @using (Html.BeginForm("Mayores", "Reportes", FormMethod.Get))
        {
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-md-6">
                    <div class="cuenta-filter form-group">
                        @Html.Label("NumeroCuenta", "Cuenta")
                        @Html.DropDownList("NumeroCuenta", null, "-- Seleccionar --", new {@class = "form-control"})
                    </div>
                </div>
                <div class="col-md-3" >
                    <div class="form-group">
                        <label for="FechaDesde">De:</label>
                        <div class='input-group date' id='datetimepicker-de'>
                            @Html.TextBox("FechaDesde", null, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-3" >
                    <div class="form-group">
                        <label for="FechaHasta">A:</label>
                        <div class='input-group date' id='datetimepicker-a'>
                            @Html.TextBox("FechaHasta", null, new { @class = "form-control" })
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        }
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
                <th>Nro Comprobante</th>
                <th>Facility</th>
                <th>Código Programático</th>
                <th>Fecha</th>
                <th>Glosa</th>
                <th>Debe</th>
                <th>Haber</th>
                <th>Saldo</th>
            </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>LPE180300001</td>
                        <td>R0031557 - NB La Paz - FR</td>
                        <td></td>
                        <td>@item.FechaCreacion.ToString("dd'/'MM'/'yyyy")</td>
                        <td>@item.Glosa</td>
                        <td>@item.debe.ToString("N2")</td>
                        <td>@item.haber.ToString("N2")</td>
                        <td>@item.Saldo.Value.ToString("N2")</td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

}

