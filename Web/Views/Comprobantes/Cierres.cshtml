@if (true)
{
    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Cierres gestión 2018 @ViewBag.GestionActual
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="recursos" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tipo Cierre</th>
                                    <th>Gestion</th>
                                    <th>Periodo</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TiposCierre.Descripcion</td>
                                        <td>@item.Gestion</td>
                                        <td>@item.Periodo</td>
                                        <td>@item.EstadosCierre.Nombre</td>
                                        @if (item.EstadoCierreId == 1 || item.EstadoCierreId == 3)
                                        {
                                            <td>@Html.ActionLink("Cerrar Periodo", "CerrarPeriodo", new { cierreId = item.Id }, new { @onclick = "return confirm('Esta seguro de cerrar el periodo actual?');", @class = "btn btn-warning btn-action" })</td>
                                        }
                                        else
                                        {
                                            <td>@Html.ActionLink("Habilitar Periodo", "HabilitarPeriodo", new { cierreId = item.Id }, new { @onclick = "return confirm('Esta seguro de habilitar el periodo actual?');", @class = "btn btn-primary btn-action" })</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
