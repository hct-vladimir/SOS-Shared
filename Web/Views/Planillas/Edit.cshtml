@model Cerberus.Sos.Accounting.BusinessLogic.Entities.PlanillaSueldo
@{
    ViewBag.Title = "Planilla de Sueldos";
}
<h2 class="page-header">Planilla - @ViewBag.MesPlanilla</h2>
<h4 class="text-right">Estado: PENDIENTE</h4>
<div class="row">
    <div class="col-md-6">
        <div class="btn-group " role="group" aria-label="..." style="margin-bottom: 20px;">
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <a href="#panel-asiento" role="button" data-toggle="collapse"><i class="glyphicon glyphicon-file"></i> Modificar Item: @Model.ITEM <span class="fa fa-chevron" aria-hidden="true"></span></a>
    </div>
    <div id="panel-asiento" class="panel-body collapse in">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.Label("Item", "Item")
                            @Html.TextBoxFor(m => m.ITEM, null, new { @class = "form-control", @readonly = "readonly" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("Dias", "Dias")
                            @Html.TextBoxFor(m => m.DIAS_PAG, null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("RcIva", "RC-IVA")
                            @Html.TextBoxFor(m => m.MOD_RC_IVA, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("Comision", "Comisión")
                            @Html.TextBoxFor(m => m.MOD_COMISION, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("AmigosSos", "Amigos SOS")
                            @Html.TextBoxFor(m => m.MOD_AMIGOSOS, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("Prestamos", "Préstamos")
                            @Html.TextBoxFor(m => m.MOD_PRESTAMOS, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            @Html.Label("OtrosDescuentos", "Otr. Descuentos")
                            @Html.TextBoxFor(m => m.MOD_OTRS_DESCUENTOS, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("OtrosIngresos", "Otr. Ingresos")
                            @Html.TextBoxFor(m => m.MOD_OTROS_INGRESOS, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("AniosAsignacionSos", "Asig. SOS")
                            @Html.TextBoxFor(m => m.MOD_ASIGSOS, null, new {@class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            @Html.Label("MontoNeto", "Monto Neto")
                            @Html.TextBoxFor(m => m.MOD_MONTO_NETO, null, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a href="@Url.Action("Index", "Planillas")" class="btn btn-warning btn-action">Cancelar</a>
            </div>
        }
    </div>
</div>

@if (true)
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Planilla de Sueldos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    @*<th>Facility</th>*@
                                    <th>Item</th>
                                    <th>Nombre</th>
                                    <th>CI</th>
                                    <th>Cargo</th>
                                    <th>Días</th>
                                    <th>RC-IVA</th>
                                    <th>Comisión</th>
                                    <th>Amigos SOS</th>
                                    <th>Préstamos</th>
                                    <th>Otros Descuentos</th>
                                    <th>Líquido Pagable</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.Planillas)
                                {
                                    <tr>
                                        @*<td>@item.CODIGO_FACILITY - @item.NOM_FACILITY</td>*@
                                        <td>@item.ITEM</td>
                                        <td>@item.NOMBRE</td>
                                        <td>@item.NUMERO_DOC @item.EXPEDIDO</td>
                                        <td>@item.CARGO</td>
                                        <td>@item.DIAS_PAG</td>
                                        <td>@item.MOD_RC_IVA</td>
                                        <td>@item.MOD_COMISION.ToString("N2")</td>
                                        <td>@item.MOD_AMIGOSOS.ToString("N2")</td>
                                        <td>@item.MOD_PRESTAMOS.ToString("N2")</td>
                                        <td>@item.MOD_OTRS_DESCUENTOS.ToString("N2")</td>
                                        <td>@item.CAL_LIQ_PAGABLE</td>
                                        <td>
                                            @Html.ActionLink("Modificar", "Edit", new { item = item.ITEM })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

