<div class="form-links">
    @Html.ActionLink("Regresar", "Index", new { gestion = ViewBag.GestionPlanilla, mes = ViewBag.MesPlanilla })
</div>

@if (Model.Any())
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Planilla de Sueldos
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="planilla-sueldos" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Filial</th>
                                    <th>Facility</th>
                                    <th>Programa</th>
                                    <th>Item</th>
                                    <th>Nombre</th>
                                    <th>CI</th>
                                    <th>Cargo</th>
                                    <th>Fecha Ingreso</th>
                                    <th>Días</th>
                                    <th>Haber Básico</th>
                                    <th>Haber Básico Ganado</th>
                                    <th>Bono de Antigüedad</th>
                                    <th>Asignación SOS</th>
                                    <th>Comisión</th>
                                    <th>Total Ganado</th>
                                    <th>RC-IVA</th>
                                    <th>AFP</th>
                                    <th>Aporte Solidario</th>
                                    <th>Aporte Nacional (1%, 5%, 10%)</th>
                                    <th>Préstamos</th>
                                    <th>Otros Descuentos</th>
                                    <th>Amigos SOS</th>
                                    <th>Total Descuentos</th>
                                    <th>Líquido Pagable</th>
                                    <th>Escala</th>
                                    <th>Nro. Cuenta</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="item-@item.ITEM">
                                        <td>@item.FILIAL</td>
                                        <td>@item.FACI_CODIGO</td>
                                        <td>@item.PROGRAMA</td>
                                        <td class="ITEM">@Html.ActionLink(item.ITEM.ToString(), "Details", "Personal", new { item = item.ITEM }, null)</td>
                                        <td class="NOMBRE">@Html.ActionLink(item.NOMBRE, "Details", "Personal", new { item = item.ITEM }, null)</td>
                                        <td>@item.NUMERO_DOC @item.EXPEDIDO</td>
                                        <td>@item.CARGO</td>
                                        <td>@item.FECHA_INGRESO.Value.ToString("dd'/'MM'/'yyyy")</td>
                                        <td>@item.DIAS_PAG</td>
                                        <td>@item.HABER_BASICO</td>
                                        <td>@item.BASICO_GANADO</td>
                                        <td>@item.CAL_BONO_ANTIGUEDAD</td>
                                        <td>@item.MOD_ASIGSOS</td>
                                        <td>@item.MOD_COMISION</td>
                                        <td>@item.CAL_TOTAL_GANADO</td>
                                        <td>@item.MOD_RC_IVA</td>
                                        <td>@item.CAL_AFP</td>
                                        <td>@item.CAL_APO_SOL_ASEG</td>
                                        <td>@item.CAL_APONALSOL</td>
                                        <td class="MOD_PRESTAMOS">@item.MOD_PRESTAMOS.ToString("N2")</td>
                                        <td class="MOD_OTRS_DESCUENTOS">@item.MOD_OTRS_DESCUENTOS.ToString("N2")</td>
                                        <td class="MOD_AMIGOSOS">@item.MOD_AMIGOSOS.ToString("N2")</td>
                                        <td>@item.CAL_TOTAL_DESCUENTO</td>
                                        <td>@item.CAL_LIQ_PAGABLE</td>
                                        <td>@item.COD_ESCALA_SAL</td>
                                        <td>@item.NUMERO_CUENTA</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/reportes.js")"></script>
}