@model IEnumerable<Cerberus.Sos.Accounting.BusinessLogic.Entities.Ciudad>

@{
    ViewBag.Title = "Ciudades";
}

<h1 class="page-header">Ciudades</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="#panel-busqueda" role="button" data-toggle="collapse">Búsqueda de ciudades <span class="fa fa-chevron" aria-hidden="true"></span></a>
    </div>
    <div id="panel-busqueda" class="panel-body collapse in">
        @using (Html.BeginForm("Index", "Ciudades", FormMethod.Get))
        {
            @Html.ValidationSummary(true)
            @*@Html.TextBox("txtNombreCiudad")
                <input type="submit" value="Busqueda">*@
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="Ciudad">Ciudad</label>
                        @Html.TextBox("txtNombreCiudad", null, new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Buscar</button>
        }
    </div>
</div>

<p>
    @Html.ActionLink("Nueva Ciudad", "Create")
</p>
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            @*<tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th></th>
                </tr>*@
            <thead>
                <tr>
                    <th>Ciudad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.ActionLink("Ver detalle", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Modificar", "Edit", new { id = item.Id })


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
