                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <legend>Datos Complementarios</legend>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.Label("TerritorioId", "Territorio")
                                            @Html.DropDownList("TerritorioId", null, "-- Seleccionar --", new { @class = "form-control" })
