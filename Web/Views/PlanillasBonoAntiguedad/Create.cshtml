@model Cerberus.Sos.Accounting.BusinessLogic.Entities.ParametrosPlanillas.BonoAntiguedad

@{
    ViewBag.Title = "Registro Bono de Antigüedad";
}

<h2>Registro Bono de Antigüedad</h2>

@using (Html.BeginForm())
{

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ingresar datos del Bono de Antigüedad
                </div>
                <div class="panel-body collapse in">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.ANIOS_INICIAL, "Edad Desde")
                        @Html.TextBoxFor(model => model.ANIOS_INICIAL, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ANIOS_INICIAL)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ANIOS_FINAL, "Edad Hasta")
                        @Html.TextBoxFor(model => model.ANIOS_FINAL, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ANIOS_FINAL)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PORCENTAJE, "Porcentaje")
                        @Html.TextBoxFor(model => model.PORCENTAJE, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.PORCENTAJE)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-default">Registrar</button>
    </div>

}

<div class="form-links">
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
